            <children>
                <Label text="Добавить период">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            <DatePicker fx:id="checkInDatePicker" prefWidth="380.0" />
            <DatePicker fx:id="checkOutDatePicker" prefWidth="380.0" />
                <HBox spacing="5.0" />
                <HBox spacing="5.0" />
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#add" prefWidth="300.0" text="Добавить" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</fx:root>
