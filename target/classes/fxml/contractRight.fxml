<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" prefHeight="300.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Добавить договор">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <HBox spacing="5.0">
                    <children>
                        <TextField fx:id="clientField" disable="true" prefWidth="295.0" promptText="Клиент" />
                        <Button mnemonicParsing="false" onAction="#client" prefWidth="80.0" text="Выбрать" />
                    </children>
                </HBox>
                <HBox layoutX="20.0" layoutY="98.0" spacing="5.0">
                    <children>
                        <TextField fx:id="regionField" disable="true" prefWidth="295.0" promptText="Участок" />
                        <Button mnemonicParsing="false" onAction="#region" prefWidth="80.0" text="Выбрать" />
                    </children>
                </HBox>
            <TextArea fx:id="offerField" prefHeight="300.0" promptText="Офферта" />
                <TextField fx:id="paymentField" layoutX="20.0" layoutY="168.0" promptText="Вознагрождение" />
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#clear" prefWidth="80.0" text="Очистить" />
                        <Button mnemonicParsing="false" onAction="#add" prefWidth="300.0" text="Добавить" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</fx:root>
